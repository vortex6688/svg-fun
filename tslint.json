{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    // ********************************************************************************************
    // Recommended Rules as per https://github.com/mgechev/codelyzer
    // based on Angular Style Guide

    // The rule have the following arguments:
    // [ENABLED, "attribute" | "element", "selectorPrefix" | ["listOfPrefixes"], "camelCase" | "kebab-case"]
    // TODO: Add tn, tn-admin prefix to everything and enable checking.
    "directive-selector": [true, "attribute", [], "camelCase"],

    // TODO: Enable and update all components to use kebab-case
    // TODO: Add tn, tn-admin prefix to everything and enable checking.
    //"component-selector": [true, "element", [], "kebab-case"],

    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-attribute-parameter-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "no-forward-ref": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,

    // [ENABLED, "SUFFIX"]
    // Where "SUFFIX" is your custom suffix, for instance "Page" for Ionic 2 components.
    "component-class-suffix": [true, "Component"],
    "directive-class-suffix": [true, "Directive"],
    "templates-use-public": true,
    "no-access-missing-member": true,
    "invoke-injectable": true,

    // ********************************************************************************************
    // Custom Rules (inherited from @AngularClass/angular2-webpack-starter )

    // use single quotes.
    "quotemark": [ true, "single", "avoid-escape" ],

    // TODO: enforce this rule at some point in time.
    "trailing-comma": [false, {"multiline": "always", "singleline": "never"}],

    // TODO: Modify to always require I prefix for interfaces.  Need to update
    // ERROR: src/app/tn-common/auth/credentials.ts
    // ERROR: src/app/tn-common/auth/credentials.ts
    // ERROR: src/app/tn-common/orders/order.state.ts
    "interface-name": [false, "always-prefix"],

    // Do not require alphabetized imports.
    // TODO: Make them alphabetized for easier lookup.
    "ordered-imports": false,

    // Do not require alpha sorting for object literal definitions.
    // TODO: Make them alphabetized for easier look up
    "object-literal-sort-keys": false,

    // allows both obj['prop] and obj.prop.
    "no-string-literal": false,

    // let keep our lines reasonably short.
    "max-line-length": [ true,  120 ],

    // relax variable names to allow leading underscores.
    "variable-name": [ true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ]
  }
}
